class Solution {
public:
    int minimumPrefixLength(vector<int>& nums) {
        int n=nums.size();
        int index=0;
       for(int i=n-1;i>=0;i--)
       {
            if(i>0 && nums[i-1]>nums[i])
            {
                 index=i;
                 break;
            }
            if(i>0 && nums[i-1]==nums[i])
            {
                index=i;
                break;
            }
       }
       return index;
    }
};
