class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() != t.size()) return false; 
        vector<int> count(26,0);
        for(auto ch:s)
        {
            count[ch-'a']++;
        }
        for(auto ch:t) 
        {
            count[ch-'a']--;
        }
        for(int i=0;i<26;i++)
        {
            if(count[i]!=0)  return false;
        }
           return true;
    }
};
