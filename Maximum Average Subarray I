class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
     
        double sum=0;
        for(int i=0;i<k;i++)
        {
            sum+=nums[i];
        }
         double maximumsum=sum;
         int i=0;
         int j=k;
         while(j<nums.size())
         {
            sum-=nums[i];
            i++;
            sum+=nums[j];
            j++;

            maximumsum=max(maximumsum,sum);
         }
         return maximumsum/k;
    }
};
